<form
  method="POST"
  class="-gray-200 mx-auto max-w-6xl space-y-6 rounded-lg bg-white"
  name="contact"
  data-netlify="true"
>
  <!-- Hidden form-name input for Netlify -->
  <input type="hidden" name="form-name" value="contact" />

  <!-- Contact Section -->
  <h3 class="text-lg font-semibold text-gray-900">Contact</h3>

  <div class="grid gap-y-4">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <input
        type="text"
        id="firstName"
        name="firstName"
        required
        placeholder="First name..."
        class="w-full rounded-md border border-slate-300 px-3 py-2 shadow-sm focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500 focus:outline-none"
      />

      <input
        type="text"
        id="lastName"
        name="lastName"
        required
        placeholder="Last name..."
        class="w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-green-500 focus:ring-2 focus:ring-green-500 focus:outline-none"
      />
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <input
        type="email"
        id="email"
        name="email"
        required
        placeholder="Email..."
        class="-500 w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500 focus:outline-none"
      />

      <input
        type="tel"
        id="phone"
        name="phone"
        required
        placeholder="Phone..."
        class="w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-green-500 focus:ring-2 focus:ring-green-500 focus:outline-none"
      />
    </div>
  </div>

  <!-- Address Section -->
  <h3 class="mt-16 text-lg font-semibold text-gray-900">Address</h3>

  <div class="grid gap-4">
    <div class="grid gap-4 md:grid-cols-2">
      <input
        type="text"
        id="street"
        name="street"
        required
        placeholder="Street..."
        class="w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-green-500 focus:ring-2 focus:ring-green-500 focus:outline-none"
      />

      <input
        type="text"
        id="city"
        name="city"
        required
        placeholder="City..."
        class="w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-green-500 focus:ring-2 focus:ring-green-500 focus:outline-none"
      />
    </div>

    <div class="grid w-full grid-cols-1 gap-4 md:grid-cols-2">
      <select
        id="state"
        name="state"
        required
        class="h-11 w-full rounded-md border border-gray-300 bg-white px-3 py-2 shadow-sm focus:border-green-500 focus:ring-2 focus:ring-green-500 focus:outline-none"
      >
        <option value="">Select State</option>
        <option value="SC">South Carolina</option>
        <option value="NC">North Carolina</option>
      </select>

      <input
        type="text"
        id="zip"
        name="zip"
        required
        minlength="5"
        placeholder="ZIP"
        class="w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500 focus:outline-none"
      />
    </div>

    <select
      id="referralSource"
      name="referralSource"
      required
      class="h-11 w-full rounded-md border border-gray-300 bg-white px-3 py-2 shadow-sm focus:border-emerald-500 focus:ring-2 focus:ring-emerald-500 focus:outline-none"
    >
      <option value="">How did you hear about us?</option>
      <option value="friend">Referred by friend/family</option>
      <option value="google">Google Search</option>
      <option value="social">Social Media</option>
      <option value="driveby">Drive-by / Saw our work</option>
      <option value="sign">Yard Sign</option>
      <option value="other">Other</option>
    </select>
  </div>

  <!-- Submit Button -->
  <button
    type="submit"
    class="w-full rounded-md bg-emerald-950 px-4 py-3 font-medium text-emerald-50 shadow-sm transition-colors duration-200 hover:bg-emerald-900 focus:ring-2 focus:ring-emerald-500 focus:ring-offset-2 focus:outline-none"
  >
    Send Request
  </button>
</form>
