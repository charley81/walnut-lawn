---
export interface Props {
  title: string
  number: string
  text: string
  description: string
  class?: string
}
const { title, number, text, description, class: className } = Astro.props
---

<div class={className}>
  <p class="font-light">{title.toUpperCase()}</p>
  <div class="flex items-center gap-x-4">
    <h3 class="text-5xl font-black text-emerald-500">{number}</h3>
    <p class="text-2xl font-bold">{description}</p>
  </div>
  <p class="text-slate-500">
    {text}
  </p>
</div>
