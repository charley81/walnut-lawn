---
import Header from '@/components/header.astro'
import Layout from '../layouts/Layout.astro'
import { Image } from 'astro:assets'
import HeroImage from '../images/hero-1.png'
import { Button } from '@/components/ui/button'
import { LucideMoveDown } from 'lucide-react'
---

<Layout title="Walnut Lawn Care - Home">
  <!-- Hero -->
  <Header />

  <div class="relative h-screen w-full">
    <Image
      src={HeroImage}
      alt="Hero Image"
      class="absolute inset-0 h-full w-full object-cover"
    />
    <div class="absolute inset-0 bg-emerald-950/24"></div>
    <div
      class="relative z-10 flex h-full items-center justify-center text-emerald-50"
    >
      <div class="flex flex-col gap-y-10 p-4">
        <h1 class="text-4xl font-black">
          Keeping Walnut Creek Beautiful, One Lawn at a Time
        </h1>
        <div class="rounded-[8px] bg-emerald-950/40 p-4">
          <p>
            Get back your weekends while we keep your lawn looking it's best
          </p>
          <Button>Get Free Estimate</Button>
        </div>
        <div
          class="absolute right-4 bottom-4 mx-auto animate-bounce rounded-full bg-emerald-500 p-2"
        >
          <LucideMoveDown />
        </div>
      </div>
    </div>
  </div>

  <!-- About -->
  <section id="about">
    <h2 class="text-2xl">About</h2>
  </section>

  <!-- Services -->
  <section id="services">
    <h2 class="text-2xl">Services</h2>
  </section>

  <!-- Testimonials -->
  <section id="testimonials">
    <h2 class="text-2xl">Testimonials</h2>
  </section>

  <!-- FAQ -->
  <section id="faq">
    <h2 class="text-2xl">FAQ</h2>
  </section>

  <!-- Contact -->
  <section id="contact">
    <h2 class="text-2xl">Contact</h2>
  </section>
</Layout>
